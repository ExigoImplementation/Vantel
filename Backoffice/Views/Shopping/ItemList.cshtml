.test(a.substr(0,4))) check = true;})(navigator.userAgent||navigator.vendor||window.opera);
                        return check;
                    }
                }

                function _init() {
                    registerEventHandlers();
                    actions.loadItemList();
                }
                _init();
            });
    </script>
}