@model Boolean
@{
    Layout = "~/Views/Shared/EditorTemplates/_FormField.cshtml";
    
    var htmlAttributes = Html.GetEditorHtmlAttributes();
}

<div class="checkbox">
    <label for="@Html.IdFor(c => c)">
        @Html.RadioButtonFor(c => c, Model, htmlAttributes)
        @Html.DisplayNameFor(c => c)
    </label>
</div>