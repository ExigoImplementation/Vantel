@model List<Party>
<div class="card card-metrics" id="view-openpartiescard">
    <div class="card-header">
        <h4 class="card-title">
            @Resources.Common.OpenParties
            <span class="card-subtitle pt-2 text-muted float-right small">
                @Resources.Common.MyOpenParties: @Model.Count()
            </span>
        </h4>
    </div>
    <div class="card-body text-center">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">@Resources.Common.Name</th>
                        <th scope="col">@Resources.Common.Date</th>
                        <th scope="col">@Resources.Common.Time</th>
                        <th scope="col">@Resources.Common.Sale</th>
                        <th scope="col">@Resources.Common.Host</th>
                    </tr>
                </thead>
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var party in Model.OrderBy(c => c.EventStart).Take(10))
                    {
                        <tr>
                            <th scope="row">@party.Description</th>
                            <td>@Convert.ToDateTime(party.EventStart).ToShortDateString()</td>
                            <td>@Convert.ToDateTime(party.EventStart).ToShortTimeString()</td>
                            <td class="text-secondary">@party.CurrentSales.ToString("C")</td>
                            <td>@party.HostDisplayName</td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
    <a href="@Url.Action("openparties")" class="card-footer block text-right">
        @Resources.Common.ViewAllOpenParties <i class="fa-chevron-right"></i>
    </a>
</div>