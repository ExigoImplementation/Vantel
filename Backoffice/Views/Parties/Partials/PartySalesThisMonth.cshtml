@model PartyDashboardViewModel

<div class="card" id="view-partysalescard">
    <div class="card-header">
        <h4 class="card-title">
            @Resources.Common.MyPartySales
        </h4>
    </div>
    <div class="card-body">
        <h3>@Model.WeeklySalesTotals.Sum(c => c.Value).ToString("C")</h3>
        <hr />
        <table class="table party-sales-this-month">
            @foreach (var week in Model.WeeklySalesTotals.OrderBy(c => c.Week))
            {
                var active = (week.IsActiveWeek) ? "active" : "";
                <tr class="@active" style="border-style: hidden;">
                    <td>@Resources.Common.Week @week.Week</td>
                    <td class="text-right">@week.Value.ToString("C")</td>
                </tr>
            }
        </table>
    </div>
</div>