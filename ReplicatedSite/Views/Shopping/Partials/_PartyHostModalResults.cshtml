@model List<Party>

@if (Model.Count > 0)
{
    <div id="search-results" style="overflow-y: auto; overflow-x: hidden; max-height: 400px;">
        <h5 id="results-header">
            Results:
            <span><strong>@Model.Count</strong> Open Parties found</span>
        </h5>
        @foreach (var party in Model)
        {
            <div class="results-row">
                <div class="row">
                    <div class="col-sm-8 results-info">
                        <span class="result-label">Hostess:</span> <span class="name">@party.HostName</span><br />
                        <span class="result-label">Party:</span><span class="name">
                            #@party.PartyID * @Convert.ToDateTime(party.StartDate).ToShortDateString() *
                        @if(party.Address != null)
                        { 
                            <text>@party.Address.City, @party.Address.State @party.Address.Zip</text>
                        }
                        </span><br />
                    </div>
                    <div class="col-xs-4">
                        <a data-role="use-party" data-partyid="@party.PartyID" class="btn btn-gray btn-gray-small">Connect</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h5 id="results-header">
        Sorry, there were no results returned from your search. Please try again.
    </h5>
}
